{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "src/off_grid/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/off_grid/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "src/app/$1"
    }
  ]
}
